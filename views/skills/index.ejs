<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Skills</title>
</head>
<body>
  <h1>Skills</h1>
  <ul>
    <% skills.forEach(function(skill) { %>
      <li>
        <a href="/skills/<%= skill.id %>"><%= skill.name %> - <%= skill.level %></a>
        <form action="/skills/<%= skill.id %>?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit">Delete</button>
        </form>
        <a href="/skills/<%= skill.id %>/edit">Edit</a>
      </li>
    <% }); %>
  </ul>
  <a href="/skills/new">Add Skill</a>
</body>
</html>
